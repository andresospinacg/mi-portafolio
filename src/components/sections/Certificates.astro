---
import Section from "../Section.astro"
import { certificates } from "@cv"

// Separar certificaciones importantes (las m√°s recientes o relevantes)
const importantCerts = certificates.slice(0, 5)
const otherCerts = certificates.slice(5)
---

<Section title="Certificaciones">
  <ul class="certificates-list">
    {
      importantCerts.map(({ name, date, issuer }) => {
        const year = new Date(date).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <p class="issuer">{issuer}</p>
                </div>
                <time>{year}</time>
              </header>
            </article>
          </li>
        )
      })
    }
  </ul>

  {otherCerts.length > 0 && (
    <details class="more-certs">
      <summary>
        Ver {otherCerts.length} certificaciones adicionales
      </summary>
      <ul class="certificates-list additional">
        {
          otherCerts.map(({ name, date, issuer }) => {
            const year = new Date(date).getFullYear()

            return (
              <li>
                <article>
                  <header>
                    <div>
                      <h3>{name}</h3>
                      <p class="issuer">{issuer}</p>
                    </div>
                    <time>{year}</time>
                  </header>
                </article>
              </li>
            )
          })
        }
      </ul>
    </details>
  )}
</Section>

<style>
  .certificates-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    font-size: 0.95rem;
    margin-bottom: 2px;
  }

  .issuer {
    color: #666;
    font-size: 0.85rem;
    margin: 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 60px;
    text-align: right;
    font-weight: 500;
  }

  .more-certs {
    margin-top: 24px;
  }

  summary {
    cursor: pointer;
    color: #0066cc;
    font-weight: 500;
    font-size: 0.95rem;
    padding: 12px 16px;
    background: #f5f5f5;
    border-radius: 6px;
    transition: all 0.2s ease;
    user-select: none;
  }

  summary:hover {
    background: #e8e8e8;
  }

  summary::marker {
    color: #0066cc;
  }

  .additional {
    margin-top: 16px;
    padding-top: 8px;
  }

  details[open] summary {
    margin-bottom: 16px;
  }

  @media (width <= 700px) {
    header {
      flex-direction: column;
      gap: 4px;
    }

    time {
      text-align: left;
    }
  }
</style>
